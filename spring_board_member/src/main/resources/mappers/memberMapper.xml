<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.java.mappers.MemberMapper">
 
    <!-- 회원 추가하기 -->
    <insert id="create">
 		insert into member (bId,bPw,bName,bAge) values (#{bId},#{bPw},#{bName},#{bAge})
    </insert>
    
    <!-- 회원 리스트보기 -->
    <select id="listAll" resultType="com.java.vo.MemberVO">
    <![CDATA[
        select * from member 
        order by bId ASC
    ]]>
    </select>
    
    <!-- 회원 상세보기 -->
    <select id="read" resultType="com.java.vo.MemberVO">
        select * from member where bId = #{bId}
    </select>
 
    <!-- 회원 삭제하기 -->
    <delete id="delete">
        delete from member where bId = #{bId}
    </delete>
    
    <!-- 회원 수정하기 -->
    <update id="update">
        update member set bPw=#{bPw}, bName=#{bName}, bAge=#{bAge} where bId = #{bId}
    </update>
 
</mapper>
